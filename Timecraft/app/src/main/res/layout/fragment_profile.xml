<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ui.profile.ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="63dp"
        tools:layout_editor_absoluteY="-26dp">

        <ImageView
            android:id="@+id/profile_picture"
            android:layout_width="137dp"
            android:layout_height="128dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="52dp"
            android:contentDescription="@string/user_profile_picture"
            android:src="@drawable/ic_default_user_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="92dp"
            android:text="@string/user_s_name"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/profile_picture"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/settings_icon"
            android:layout_width="44dp"
            android:layout_height="40dp"
            android:contentDescription="@string/settings_icon"
            android:src="@drawable/ic_settings"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.899"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_name"
            app:layout_constraintVertical_bias="0.704" />

        <Button
            android:id="@+id/completed_tasks_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:backgroundTint="#C1FB9803"
            android:text="@string/completed_tasks"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/achievements_button"
            app:layout_constraintTop_toBottomOf="@+id/user_name" />

        <Button
            android:id="@+id/achievements_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:backgroundTint="#C1FB9803"
            android:text="@string/achievements"
            app:layout_constraintEnd_toStartOf="@+id/completed_tasks_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="414dp"
        android:layout_height="80dp"
        android:background="#C1FB9803"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/Task"
            android:name="com.example.timecraft.ui.task.TaskFragment"
            android:layout_width="132dp"
            android:layout_height="80dp" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/Home"
            android:name="com.example.timecraft.ui.home.HomeFragment"
            android:layout_width="147dp"
            android:layout_height="80dp" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/Profile"
            android:name="com.example.timecraft.ui.profile.ProfileFragment"
            android:layout_width="134dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>